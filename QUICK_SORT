#include <stdio.h>

int imprimir_array(int array[], int n){
    for(int k = 0; k < n; k++){
        printf("%d - ", array[k]);
    }
    printf("\n");
}

int partition(int array[], int inicio, int fim){
    int pivo = array[fim];
    int i = inicio;
    
    for(int j = inicio; j < fim; j++){
        if(array[j] < pivo){
            int aux = array[i];
            array [i] = array[j];
            array[j] = aux;
            i++;
        }
    }
    int aux2 = array[i];
    array[i] = array[fim];
    array[fim] = aux2;
    return i;
}

void quick_sort(int array[], int p, int r){
    imprimir_array(array,6);
    printf("%d, %d", p, r);
    printf("\n");
    if(p < r){
        int q = partition(array, p, r);
        printf("%d \n", q);
        quick_sort(array, p, q -1);
        quick_sort(array, q + 1, r);
        
    }
    
    
    
}

int main(){
    
    int array[] = {2, 4, 6, 10, 9, 12};
    imprimir_array(array, 6);
    quick_sort(array,0,5);
    
    
    
    
    

    return 0;
}
