
#include <stdio.h>

int imprimir_array(int array[], int n){
    for (int k =0; k < n; k++){
        printf("%d - ", array[k]);
    }
    printf("\n");
}

void bubble_sort(int array[], int n){
    for (int i = 0; i < n-1; i++){
        for (int j = 0; j <  n - i - 1; j++){
            if(array[j] > array[j+1]){
                int aux = array[j];
                array[j] = array [j + 1];
                array[j +1] = aux;
            }
        }
        imprimir_array(array, n);
    }
}

void inserstion_sort(int array[], int n){
    for(int i = 1; i < n; i++){
        int chave = array[i];
        int j = i -1;
        
        while(j >=0 && array[j] > chave){
            array[j+1] = j;
            j --;
        }
        array[j+1] = chave;
        
        
        printf("%d", i);
        imprimir_array;
    }
}



int main()
{
    int n = 6;
    int array[] = {5, 3, 2, 4, 6, 1};
    
    inserstion_sort(array, n);
}
