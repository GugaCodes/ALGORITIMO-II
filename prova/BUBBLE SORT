
#include <stdio.h>

int imprimir_array(int array[], int n){
    for (int k =0; k < n; k++){
        printf("%d - ", array[k]);
    }
    printf("\n");
}

void bubble_sort(int array[], int n){
    for (int i = 0; i < n-1; i++){
        for (int j = 0; j <  n - i - 1; j++){
            if(array[j] > array[j+1]){
                int aux = array[j];
                array[j] = array [j + 1];
                array[j +1] = aux;
            }
        }
        imprimir_array(array, n);
    }
}

int main()
{
    int n = 6;
    int array[] = {47, 3, 92, 18, 65, 7};
    
   bubble_sort(array, n);
}
